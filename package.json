{
  "name": "spotify-wrapper",
  "version": "1.0.0",
  "description": "A wrapper to work with the Spotify Web API.",
  "main": "src/index.js",
  "scripts": {
    "build": "npm run clear && ./node_modules/.bin/babel --out-dir lib src",
    "build:umd": "./node_modules/.bin/webpack --output-filename spotify-wrapper.umd.js -d",
    "build:umd:min": "./node_modules/.bin/webpack --output-filename spotify-wrapper.umd.min.js -p",
    "build:umd:all": "npm run build:umd && npm run build:umd:min",
    "build:watch": "npm run build -- --watch",
    "clear": "rimraf lib",
    "lint": "./node_modules/.bin/eslint src/*.js",
    "prepush": "npm run lint && npm run test:coverage",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:tdd": "npm test -- --watch",
    "test:coverage": "nyc npm test"
  },
  "nyc": {
    "check-coverage": true,
    "functions": 80,
    "lines": 80,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mibsbalsante/js-tdd-course.git"
  },
  "keywords": [
    "js",
    "tdd"
  ],
  "author": "Mibs Balsante <mibsbalsante@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mibsbalsante/js-tdd-course/issues"
  },
  "homepage": "https://github.com/mibsbalsante/js-tdd-course#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "husky": "^0.14.3",
    "mocha": "^5.2.0",
    "node-fetch": "^2.1.2",
    "nyc": "^12.0.2",
    "rimraf": "^2.6.2",
    "sinon": "^6.0.0",
    "sinon-chai": "^3.2.0",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8"
  }
}
